<config_plugin>
    <config>
        <!-- which workflow template shall be used -->
        <template>*</template>
        <!-- publication type to create -->
        <publicationType>Monograph</publicationType>
        <!-- which digital collection to use -->
        <collection>archive#100uaghgw#040volkskundearchivk#040#</collection>
        <!-- define which is the first line to start (line 1 is often the header row in the Excel sheet) -->
        <firstLine>1</firstLine>
        <!-- which one is the identifier column to use for the Goobi process title (default is 1) -->
        <identifierColumn>2</identifierColumn>
        <!-- if there is a column that must contain a value then define it here (default falls back to identifierColumn) -->
        <conditionalColumn>3</conditionalColumn>
        <!-- which columns shall be mapped to which process property and to which ugh metadata
        column: defines the column number. The first column is 1
        ugh: name of the metadata to use
        name: name of the property - if its missing or empty no property gets generated
        identifier: column where the gnd data is stored
         -->
        <metadata
            ugh="CatalogIDDigital"
            column="1" />
        <metadata
            ugh="CatalogIDSource"
            column="9" />
        <metadata
            ugh="PlaceOfPublication"
            name="Ort"
            identifier="4"
            column="3" />
        <metadata
            ugh="PublicationYear"
            column="8" />
        <person ugh="Author">
            <firstname>5</firstname>
            <lastname>6</lastname>
            <identifier>7</identifier>
        </person>
         <metadata
            ugh="TitleDocMain"
            column="2" />
        <metadata
            ugh="DocLanguage"
            column="10" />
    </config>
</config_plugin>